---
import '../styles/bosch.css'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet">
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
	<title>{title}</title>
</head>
<body data-scroll-container>
	<slot />
</body>
</html>

<style>
  :global(body::-webkit-scrollbar) {
    display: none;
  }
  
  :global(*) {
    margin: 0;
    box-sizing: border-box;
    font-family: inherit;
    font-size: inherit;
  }

  :global(*::selection) {
    background-color: rgba(227, 227, 227, 0.6); 
    color: black;
  }

  :global(body) {
    font-family: 'Space Grotesk';
  }

  :global(html) {
    scroll-behavior: smooth;
  }

  :global(h1) {
    font-family: 'Bosch';
  }

  :global(img) {
    width: 100%;
  }

  :global(.container) {
    display: grid;
    justify-self: center;
    grid-template-columns: repeat(12, 1fr);
    margin-inline: 5rem !important;
    column-gap: 1.5rem;
    left: 0 !important;
    right: 0 !important;
  }

  :global(.bg-wrapper) {
    background-color: #efedec;
    background-image: url('/misc/texture.png');
    background-repeat: repeat;
    background-blend-mode: overlay;
  }

  :global(button) {
    border: none;
    background: none;
    padding: unset;
    outline: none;
  }

  @media (min-width: 1440px) {
    :global(.container) {
      max-width: 1280px;
      margin-inline: auto !important;
    }
  }

  @media (max-width: 768px) {
    :global(.container) {
      margin-inline: 3.33rem !important;
    }

    :global(.bg-wrapper) {
      background-image: unset !important;
      background-repeat: no-repeat;
    }
  }

  @media (max-width: 540px) {
    :global(.container) {
      margin-inline: 2.5rem !important;
    }
  }

</style>